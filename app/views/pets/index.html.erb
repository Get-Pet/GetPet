<%= stylesheet_link_tag "style_padrao_listar.css" %>
<%= render 'header'  %>

<p id="notice"><%= notice %></p>

<h1 class="title-table">Pets</h1>
<div class="table-wrapper">
  <table class="fl-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Raca</th>
        <th>Cor</th>
        <th>Idade</th>
        <th>Porte</th>
        <th>Observacao</th>
        <th>Cliente</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.nome %></td>
          <td><%= pet.raca %></td>
          <td><%= pet.cor %></td>
          <td><%= pet.idade %></td>
          <td><%= pet.porte %></td>
          <td><%= pet.observacao %></td>
          <td><%= pet.cliente.nome %></td>
          <td><%= link_to 'Mostrar', pet %></td>
          <td><%= link_to 'Editar', edit_pet_path(pet) %></td>
          <td><%= link_to 'Remover', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td><%= link_to 'Novo Pet', new_pet_path %></td>
      </tr>
    </tbody>
  </table>
</div>
<%= render 'footer'  %>
<%= stylesheet_link_tag "style_login.css" %>

<body class="main-bg">
  <div class="login-container text-c animated flipInX">
    <div>
        <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
    </div>
        <h1 class="text-whitesmoke">Login</h1>
    <div class="container-content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group field">
          <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email"%>
        </div>
      
        <div class="form-group field">
          <%= f.password_field :password,placeholder:"Senha", autocomplete: "current-password" %>
        </div>      
        <div class="actions">
          <%= f.submit "Entrar" %>
        </div>
      <% end %>
    </div>
  </div>
</body>
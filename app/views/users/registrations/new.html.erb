
<%= stylesheet_link_tag "style_login.css" %>

<body class="main-bg">
  <div class="login-container text-c animated flipInX">
    <div>
        <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
    </div>
        <h1 class="text-whitesmoke">Cadastro</h1>
    <div class="container-content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
      
        <div class="form-group field">
          <%= f.email_field :email,placeholder:"Email", autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="form-group field">
          <%= f.password_field :password,placeholder:"Senha", autocomplete: "new-password" %>
        </div>
      
        <div class="form-group field">
          <%= f.password_field :password_confirmation,placeholder:"Confirmar senha", autocomplete: "new-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "Cadastrar" %>
        </div>
      <% end %>
      
      <div class="form-group field">    
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</body>

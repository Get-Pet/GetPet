<%= render 'header'  %>

<p id="notice"><%= notice %></p>

<h1>Agendamentos</h1>

<table>
  <thead>
    <tr>
      <th>Pet</th>
      <th>Servico</th>
      <th>Usuario</th>
      <th>Data</th>
      <th>Observacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agendamentos.each do |agendamento| %>
      <tr>
        <td><%= agendamento.pet_id %></td>
        <td><%= agendamento.servico_id %></td>
        <td><%= agendamento.usuario_id %></td>
        <td><%= agendamento.data %></td>
        <td><%= agendamento.observacao %></td>
        <td><%= link_to 'Show', agendamento %></td>
        <td><%= link_to 'Edit', edit_agendamento_path(agendamento) %></td>
        <td><%= link_to 'Destroy', agendamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Agendamento', new_agendamento_path %>

<%= render 'footer'  %>
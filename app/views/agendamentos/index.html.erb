<%= stylesheet_link_tag "style_padrao_listar.css" %>
<%= render 'header'  %>

<p id="notice"><%= notice %></p>

<h1 class="title-table">Agendamentos</h1>
<div class="table-wrapper">
  <table class="fl-table">
    <thead>
      <tr>
        <th>Pet</th>
        <th>Servico</th>
        <th>Usuario</th>
        <th>Data</th>
        <th>Observacao</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @agendamentos.each do |agendamento| %>
        <tr>
          <td><%= agendamento.pet.nome %></td>
          <td><%= agendamento.servico.nome %></td>
          <td><%= agendamento.usuario.nome %></td>
          <td><%= agendamento.data %></td>
          <td><%= agendamento.observacao %></td>
          <td><%= link_to 'Mostrar', agendamento %></td>
          <td><%= link_to 'Editar', edit_agendamento_path(agendamento) %></td>
          <td><%= link_to 'Remover', agendamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td><%= link_to 'Novo Agendamento', new_agendamento_path %></td>
      </tr>
    </tbody>
  </table>
</div>
<%= render 'footer'  %>
<%= stylesheet_link_tag "style_padrao_listar.css" %>
<%= render 'header'  %>

<p id="notice"><%= notice %></p>

<h1 class="title-table">Servicos</h1>
<div class="table-wrapper">
  <table class="fl-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descricao</th>
        <th>Duracao</th>
        <th>Valor</th>
        <th>Observacoes</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @servicos.each do |servico| %>
        <tr>
          <td><%= servico.nome %></td>
          <td><%= servico.descricao %></td>
          <td><%= servico.duracao %></td>
          <td><%= servico.valor %></td>
          <td><%= servico.observacoes %></td>
          <td><%= link_to 'Mostrar', servico %></td>
          <td><%= link_to 'Editar', edit_servico_path(servico) %></td>
          <td><%= link_to 'Remover', servico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
        <tr>
            <td><%= link_to 'Novo Serviço', new_servico_path %></td>
        </tr>
    </tbody>
  </table>
</div>
<%= render 'footer'  %>
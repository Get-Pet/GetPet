<%= stylesheet_link_tag "style_padrao_listar.css" %>
<%= render 'header'  %>

<p id="notice"><%= notice %></p>

<h1 class="title-table">Clientes</h1>
<div class="table-wrapper">
  <table class="fl-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Endereco</th>
        <th>Telefone</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.nome %></td>
          <td><%= cliente.endereco %></td>
          <td><%= cliente.telefone %></td>
          <td><%= link_to 'Mostrar', cliente %></td>
          <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
          <td><%= link_to 'Remover', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td><%= link_to 'Novo Cliente', new_cliente_path %></td>
      </tr>
    </tbody>
  </table>
</div>
<%= render 'footer'  %>
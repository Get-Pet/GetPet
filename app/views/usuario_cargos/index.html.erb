<%= render 'header'  %>

<p id="notice"><%= notice %></p>

<h1>Usuario Cargos</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuario_cargos.each do |usuario_cargo| %>
      <tr>
        <td><%= usuario_cargo.usuario.nome %></td>
        <td><%= usuario_cargo.cargo.nome %></td>
        <td><%= link_to 'Show', usuario_cargo %></td>
        <td><%= link_to 'Edit', edit_usuario_cargo_path(usuario_cargo) %></td>
        <td><%= link_to 'Destroy', usuario_cargo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Usuario Cargo', new_usuario_cargo_path %>

<%= render 'footer'  %>